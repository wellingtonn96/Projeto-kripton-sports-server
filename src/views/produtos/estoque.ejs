<%- include("../includes/header") -%>

<div id="content-wrapper">

        <div class="container-fluid">
        
            <!-- DataTables Example -->
            <div class="card mb-3">
            <div class="card-header">
                <div class="row">
                    <div class="col-md-6">
                        <i class="fas fa-id-card"></i>
                       Controle de estoque
                    </div>
                </div>
            </div>
            <div class="card-body">
               
                <div class="container">

                    <div class="table-responsive">
                        <table class="table table-bordered text-center" id="dataTable" width="100%" cellspacing="0">
                            <thead>
                            <tr>
                                <th>ID Produto</th>
                                <th>codigo</th>
                                <th>nome</th>
                                <th>marca</th>
                                <th>descricão</th>
                                <th>estoque</th>
                                <th>Ações</th>
                            </tr>
                            </thead>
                            <tfoot>
                            <tr>
                                <th>ID Produto</th>
                                <th>codigo</th>
                                <th>nome</th>
                                <th>marca</th>
                                <th>descricão</th>
                                <th>estoque</th>
                                <th>Ações</th>
                            </tr>
                            </tfoot>
                                <tbody>
                                <% if(produtos.length > 0) {%>

                                    <% for(var i = 0; i < produtos.length; i++){ %>
                                    <tr>
                                        <td><%= produtos[i].idProduto %></td>
                                        <td><%= produtos[i].codigo %></td>
                                        <td><%= produtos[i].nome %></td>
                                        <td><%= produtos[i].marca %></td>
                                        <td><%= produtos[i].descricao %></td>
                                        <form action="/estoque/<%= produtos[i].idProduto %>" method="POST">
                                        <td><input type="number" class="form-control" id="qtdeEstoque" name="qtdeEstoque" min="1" max="9999" placeholder="<%= produtos[i].qtdeEstoque %>" required></td>
                                        <td>
                                            <button type="submit" class="btn btn-outline-danger" type="button"><i class="fa fa-plus"></i></button>
                                        </td>
                                        </form>
                                    </tr>
                                    <% } %>
                            </tbody>
                    </table>
                </div>
            </div>
    </div>

            <!-- Modal -->
    <div class="modal fade" id="modalDelete" tabindex="-1" role="dialog" aria-labelledby="modalDelete" aria-hidden="true">
        <div class="modal-dialog" role="document">
            <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="modalDelete">Excluir produto</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                <span aria-hidden="true">&times;</span>
                </button>
                </div>
                    <div class="modal-body">Deseja realmente excluir este produto!</div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-dismiss="modal">cancelar</button>
                    <a href="../produto/excluir/<%= produtos[0].idProduto%>"><button type="button" class="btn btn-danger">Excluir</button></a>
                    <% } %>
                </div>
            </div>
        </div>
    </div>
        
</div>


<%- include("../includes/footer") -%>