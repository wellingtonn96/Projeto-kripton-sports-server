<%- include("../includes/header") -%>

<div id="content-wrapper">

        <div class="container-fluid">
        
            <!-- DataTables Example -->
            <div class="card mb-3">
            <div class="card-header">
                <div class="row">
                    <div class="col-md-6">
                        <i class="fas fa-user"></i>
                        clientes cadastrados
                    </div>
                    <div class="col-md-6">
                        <div>
                            <a href="/clientes/cadastrar"><button type="button" class="btn btn-success float-right" id="novocliente">Cadastrar novo cliente</button></a>
                        </div>
                    </div>
                </div>
            </div>
            <div class="card-body">
               
                <!--Conteudo serão inseridos aqui-->
                <div class="container">

                  <div class="table-responsive">
                    <table class="table table-bordered text-center" id="dataTable" width="100%" cellspacing="0">
                      <thead>
                        <tr>
                            <th>ID</th>
                            <th>Login</th>
                            <th>Email</th>
                            <th>Nome</th>
                            <th>Sobrenome</th>
                            <th>Ações</th>
                        </tr>
                      </thead>
                      <tfoot>
                        <tr>
                            <th>ID</th>
                            <th>Login</th>
                            <th>Email</th>
                            <th>Nome</th>
                            <th>Sobrenome</th>
                            <th>Ações</th>
                        </tr>
                      </tfoot>
                      <tbody>
                        <% for(var i = 0; i < dados.length; i++){ %>
                        <tr>
                            <td><%= dados[i].idCliente %></td>
                            <td><%= dados[i].login %></td>
                            <td><%= dados[i].email %></td>
                            <td><%= dados[i].nome %></td>
                            <td><%= dados[i].sobrenome %></td>
                            <td>
                              <table>
                                <tr>
                                   <!--
                                    <td>
                                        <button type="button" class="btn btn-outline-danger fas fa-trash-alt" data-toggle="modal" data-target="#modalDelete"></button>
                                    </td>
                                    -->
                                    <td>
                                      <a href="../clientes/editar/<%=dados[i].idCliente%>"><button type="button" class="btn btn-outline-info fas fa-edit"></button></a>
                                    </td>
                                    <td>
                                      <a href="../clientes/detalhes/<%=dados[i].idCliente%>"><button type="button" class="btn btn-outline-warning fas fa-calendar"></button></a>
                                    </td>
                                </table>
                            </td>
                        </tr>
                        <% } %>
                      </tbody>
                    </table>
                  </div>
                </div>               
            </div>
        
        </div>
