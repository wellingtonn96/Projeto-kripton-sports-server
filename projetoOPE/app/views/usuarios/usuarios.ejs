<%- include("../includes/header") -%>

<div id="content-wrapper">

        <div class="container-fluid">
        
            <!-- DataTables Example -->
            <div class="card mb-3">
            <div class="card-header">
                <div class="row">
                    <div class="col-md-6">
                        <i class="fas fa-user"></i>
                        Usuarios Cadastrados
                    </div>
                    <div class="col-md-6">
                        <div>
                            <a href="/usuarios/cadastrar"><button type="button" class="btn btn-success float-right" id="novoUsuario">Cadastrar novo usuario</button></a>
                        </div>
                    </div>
                </div>
            </div>
            <div class="card-body">
               
                <!--Conteudo serão inseridos aqui-->
                <div class="container">

                  <div class="table-responsive">
                    <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
                      <thead>
                        <tr>
                            <th>ID</th>
                            <th>Login</th>
                            <th>Email</th>
                            <th>Nome</th>
                            <th>Tipo usuario</th>
                            <th>Ações</th>
                        </tr>
                      </thead>
                      <tfoot>
                        <tr>
                            <th>ID</th>
                            <th>Login</th>
                            <th>Email</th>
                            <th>Nome</th>
                            <th>Tipo usuario</th>
                            <th>Ações</th>
                        </tr>
                      </tfoot>
                      <tbody>
                        <% for(var i = 0; i < dados.length; i++){ %>
                        <tr>
                            <td><%= dados[i].idUsuario %></td>
                            <td><%= dados[i].login %></td>
                            <td><%= dados[i].email %></td>
                            <td><%= dados[i].nome %></td>
                            <td><%= dados[i].tipo %></td>
                            <td>
                              <table>
                                <tr>
                                    <td>
                                      <a href="../usuarios/excluir/<%=dados[i].idUsuario%>"><button type="button" class="btn btn-outline-danger fas fa-trash-alt"></button></a>
                                    </td>
                                    <td>
                                      <a href="../usuarios/editar/<%=dados[i].idUsuario%>"><button type="button" class="btn btn-outline-info fas fa-edit"></button></a>
                                    </td>
                                    <td>
                                      <a href="../usuarios/detalhes/<%=dados[i].idUsuario%>"><button type="button" class="btn btn-outline-warning fas fa-calendar"></button></a>
                                    </td>
                                </table>
                            </td>
                        </tr>
                        <% } %>
                      </tbody>
                    </table>
                  </div>
                </div>               
            </div>
                  
        <!--Modal excluir usuario-->

        <div class="modal" tabindex="-1" role="dialog"  id="excluirUsuario" tabindex="-1" role="dialog" aria-labelledby="excluirUsuario" aria-hidden="true">
          <div class="modal-dialog" role="document">
            <div class="modal-content">
              <div class="modal-header">
                <h5 class="modal-title">Excluir usuario</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                  <span aria-hidden="true">&times;</span>
                </button>
              </div>
              <div class="modal-body">
                <p>Deseja realmente excluir este usuario!</p>
              </div>
              <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-dismiss="modal">Fechar</button>
                <button type="button" class="btn btn-danger" id="btn_excluirUsuario">Excluir</button>
              </div>
            </div>
          </div>
        

        <!--fecha modal-->
       
        </div>
        
</div>

<%- include("../includes/footer") -%>