<%- include("../includes/header") -%>

<div id="content-wrapper">

        <div class="container-fluid">
        
            <!-- DataTables Example -->
            <div class="card mb-3">
            <div class="card-header">
                <div class="row">
                    <div class="col-md-6">
                        <i class="fas fa-barcode"></i>
                        Produtos Cadastrados
                    </div>
                    <div class="col-md-6">
                        <div>
                            <a href="/produto/cadastrar"><button type="button" class="btn btn-success float-right" id="novoUsuario">Cadastrar novo produto</button></a>
                        </div>
                    </div>
                </div>
            </div>
            <div class="card-body">
               
                <div class="container">

                    <div class="table-responsive">
                        <table class="table table-bordered text-center" id="dataTable" width="100%" cellspacing="0">
                            <thead>
                            <tr>
                                <th>ID Produto</th>
                                <th>codigo</th>
                                <th>marca</th>
                                <th>nome</th>
                                <th>descricão</th>
                                <th>validade</th>
                                <th>Ações</th>
                            </tr>
                            </thead>
                            <tfoot>
                            <tr>
                                <th>idProduto</th>
                                <th>codigo</th>
                                <th>marca</th>
                                <th>nome</th>
                                <th>descricao</th>
                                <th>validade</th>
                                <th>Ações</th>
                            </tr>
                            </tfoot>
                                <tbody>
                                <% if(produtos.length > 0) {%>

                                    <% for(var i = 0; i < produtos.length; i++){ %>
                                    <tr>
                                        <td><%= produtos[i].idProduto %></td>
                                        <td><%= produtos[i].codigo %></td>
                                        <td><%= produtos[i].marca %></td>
                                        <td><%= produtos[i].nome %></td>
                                        <td><%= produtos[i].descricao %></td>
                                        <td><%= produtos[i].validade.toLocaleDateString("pt-br") %></td>
                                        <td>
                                            <table>
                                                <tr>
                                                    <td>
                                                        <button type="button" class="btn btn-outline-danger fas fa-trash-alt" data-toggle="modal" data-target="#modalDelete"></button>
                                                    </td>
                                                    <td>
                                                        <a href="../produto/editar/<%=produtos[i].idProduto%>"><button type="button" class="btn btn-outline-info fas fa-edit"></button></a>
                                                    </td>
                                                    <td>
                                                        <a href="../produto/detalhes/<%=produtos[i].idProduto%>"><button type="button" class="btn btn-outline-warning fas fa-calendar"></button></a>
                                                    </td>
                                                </table>
                                            </tr>
                                        </td>
                                    </tr>
                                    <% } %>
                            </tbody>
                    </table>
                </div>
            </div>
    </div>

            <!-- Modal -->
    <div class="modal fade" id="modalDelete" tabindex="-1" role="dialog" aria-labelledby="modalDelete" aria-hidden="true">
        <div class="modal-dialog" role="document">
            <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="modalDelete">Excluir produto</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                <span aria-hidden="true">&times;</span>
                </button>
                </div>
                    <div class="modal-body">Deseja realmente excluir este produto!</div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-dismiss="modal">cancelar</button>
                    <a href="../produto/excluir/<%= produtos[0].idProduto%>"><button type="button" class="btn btn-danger">Excluir</button></a>
                    <% } %>
                </div>
            </div>
        </div>
    </div>
        
</div>


<%- include("../includes/footer") -%>