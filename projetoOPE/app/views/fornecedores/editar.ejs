<%- include("../includes/header") -%>

<div id="content-wrapper">

<div class="container-fluid">

    <!-- DataTables Example -->
    <div class="card mb-3">
    <div class="card-header">
        <i class="fas fa-building"></i>
        Atualizar fornecedor</div>
    <div class="card-body">
        
        <form action="../salvar/<%=dados[0].idFornecedor%>" method="POST">
            <div class="form-row-12">
                <div class="form-group col">
                    <label for="cnpj">ID Fornecedor:</label>
                    <input type="text" class="form-control" id="idFornecedor" name="idFornecedor" value="<%=dados[0].idFornecedor%>" required>
                </div>
                <div class="form-group col">
                    <label for="cnpj">CNPJ:</label>
                    <input type="text" class="form-control" id="cnpj" name="cnpj" value="<%=dados[0].cnpj%>" placeholder="Ex.. 00000-0000" required>
                </div>

                <div class="form-group col">
                    <label for="marca">Email:</label>
                    <input type="email" class="form-control" id="email" name="email" value="<%=dados[0].email%>" required>
                </div>

                <div class="form-group col">
                    <label for="endereco">Endere√ßo:</label>
                    <input type="text" class="form-control" id="endereco" name="endereco" value="<%=dados[0].endereco%>"required>
                </div>

                <div class="form-group col">
                    <label for="telefone">Telefone:</label>
                    <input type="text" class="form-control" id="telefone" name="telefone" value="<%=dados[0].telefone%>" required>
                </div>
        
                <div class="form-group">
                    <button type="submit" class="btn btn-danger">Atualizar</button>
                </div>
            </div>
        </form>
    </div>


</div>

<%- include("../includes/footer") -%>