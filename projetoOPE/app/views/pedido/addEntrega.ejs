<%- include("../includes/header") -%>

<div id="content-wrapper">

<div class="container-fluid">

    <!-- DataTables Example -->
    <div class="card mb-3">
    <div class="card-header">
        <i class="fas fa-barcode"></i>
        Entrega a domicilio
    </div>
    <div class="card-body">
            <% if(validacao.length > 0){%>
                <div class="alert alert-danger">
                    <strong>Atenção!</strong>
                    <ul>
                        <% for(var i = 0; i < validacao.length; i++){%>
        
                        <li><%= validacao[i].msg %></li>
        
                        <% } %>
                    </ul>
                </div>
            <% } %>
        <form action="/produto" method="post">
            <div class="form-row">

                <div class="form-group col-md-6">
                    <label for="codigo">Rua:</label>
                    <input type="text" class="form-control" id="codigo" name="codigo" placeholder="Ex.. 00000-0000">
                </div>

                <div class="form-group col-md-6">
                    <label for="marca">Cidade:</label>
                    <input type="text" class="form-control" id="marca" name="marca">
                </div>

                <div class="form-group col-md-6">
                    <label for="nome">Numero:</label>
                    <input type="text" class="form-control" id="nome" name="nome">
                </div>

                <div class="form-group col-md-6">
                    <label for="descricao">Estado:</label>
                    <input type="text" class="form-control" id="descricao" name="descricao">
                </div>

                <div class="form-group col-md-6">
                    <label for="validade">ID Usuario:</label>
                    <input type="date" class="form-control" id="validade" name="validade">
                </div>

                <div class="form-group">
                    <button type="submit" class="btn btn-danger">Cadastrar</button>
                </div>
            </div>
        </form>
    </div>


</div>

<%- include("../includes/footer") -%>