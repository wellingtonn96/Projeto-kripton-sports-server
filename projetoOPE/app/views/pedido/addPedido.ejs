<%- include("../includes/header") -%>

<div id="content-wrapper">

        <div class="container-fluid">
        
            <!-- DataTables Example -->
            <div class="card mb-3">
            <div class="card-header">
                <div class="row">
                    <div class="col-md-6">
                        <i class="fas fa-barcode"></i>
                        PDV Online
                    </div>
                    <div class="col-md-6">
                        <div>
                            <button type="button" class="btn btn-success float-right" data-toggle="modal" data-target=".bd-example-modal-lg">Adicionar Produto</button>
                        </div>
                    </div>
                </div>
            </div>
            <div class="card-body">
               
                <div class="container">

                    <div class="table-responsive">
                        <table class="table table-bordered text-center" id="dataTable" width="100%" cellspacing="0">
                            <thead>
                            <tr>
                                <th>ID Produto</th>
                                <th>código</th>
                                <th>marca</th>
                                <th>nome</th>
                                <th>descricão</th>
                                <th>válidade</th>
                                <th>Valor</th>
                                <th>Ações</th>
                            </tr>
                            </thead>
                            <tfoot>
                            <tr>
                                <th colspan="3">Valor:</th>
                                <th colspan="4">R$20:00</th>
                                <th>
                                    <div class="form-group">
                                        <button type="submit" class="btn btn-info">Encerrar Venda</button>
                                    </div>
                                </th>
                            </tr>
                            </tfoot>
                                <tbody>
                                    
                                <% for(var i = 0; i < produto.length; i++){ %>
                                <tr>
                                    <td><%= produto[i].idProduto %></td>
                                    <td><%= produto[i].codigo %></td>
                                    <td><%= produto[i].marca %></td>
                                    <td><%= produto[i].nome %></td>
                                    <td><%= produto[i].descricao %></td>
                                    <td><%= produto[i].validade.toLocaleDateString("pt-br") %></td>
                                    <td>R$<%= produto[i].valor %></td>
                                    <td>
                                        <div class="form-group">
                                            <button type="submit" class="btn btn-danger">Cancelar</button>
                                        </div>
                                    </td>
                                </tr>
                                <% } %>
                            </tbody>
                    </table>
                </div>
            </div>

        </div>
        <!--Modal-->
        <div class="modal fade bd-example-modal-lg" tabindex="-1" role="dialog" aria-labelledby="myLargeModalLabel" aria-hidden="true">
            <div class="modal-dialog modal-lg">
                <div class="modal-content">
                    <div class="table-responsive">
                        <form action="/pedido" method="POST">
                        <table class="table table-sm">
                            <thead>
                            <tr>
                                <th></th>
                                <th>ID</th>
                                <th>codigo</th>
                                <th>marca</th>
                                <th>nome</th>
                                <th>descricao</th>
                                <th>validade</th>
                            </tr>
                            </thead>
                                <tbody>
                                <% for(var i = 0; i < produtos.length; i++){ %>
                                <tr>
                                    <td><input type="radio" name="idProduto" value="<%= produtos[i].idProduto %>"></td>
                                    <td><%= produtos[i].idProduto %></td>
                                    <td><%= produtos[i].codigo %></td>
                                    <td><%= produtos[i].marca %></td>
                                    <td><%= produtos[i].nome %></td>
                                    <td><%= produtos[i].descricao %></td>
                                    <td><%= produtos[i].validade.toLocaleDateString("pt-br") %></td>
                                </tr>
                                <% } %>
                            </tbody>"
                        </table>
                    </div>
                    <div class="col">
                        <div class="modal-footer">
                            <button type="button" class="btn btn-secondary" data-dismiss="modal">cancelar</button>
                            <button type="submit" class="btn btn-info">Adicionar</button>
                        </div>
                    </div>
                </form>
                </div>
            </div>

        <!--fecha modal-->
        </div>

</div>

<%- include("../includes/footer") -%>