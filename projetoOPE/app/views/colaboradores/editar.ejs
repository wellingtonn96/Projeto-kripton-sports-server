<%- include("../includes/header") -%>

<div id="content-wrapper">

<div class="container-fluid">

    <!-- DataTables Example -->
    <div class="card mb-3">
    <div class="card-header">
        <i class="fas fa-user"></i>
        Cadastro de usu√°rios</div>
    <div class="card-body">

        <form action="../salvar/<%=dados[0].idColaborador%>" method="POST">
            <div class="form-row">
                <div class="form-group col-md-6">
                    <label for="login">Login:</label>
                    <input type="text" class="form-control" id="login" name="login" value="<%=dados[0].login%>" required>
                </div>

                <div class="form-group col-md-6">
                    <label for="senha">Senha:</label>
                    <input type="password" class="form-control" id="senha" name="senha" value="<%=dados[0].senha%>" required>
                </div>
                <!--
                <div class="form-group">
                    <label for="confirmarSenha">Confirmar Senha:</label>
                    <input type="password" class="form-control" id="confirmarSenha" name="confirmarSenha">
                </div>
                --> 

                <div class="form-group col-md-6">
                    <label for="pwd">Nome:</label>
                    <input type="text" class="form-control" id="nome" name="nome" value="<%=dados[0].nome%>" required>
                </div>

                <div class="form-group col-md-6">
                    <label for="pwd">Sobrenome:</label>
                    <input type="text" class="form-control" id="sobrenome" name="sobrenome" value="<%=dados[0].sobrenome%>" required>
                </div>

                <div class="form-group col-md-6">
                    <label for="email">Email:</label>
                    <input type="email" class="form-control" id="email" name="email" value="<%=dados[0].email%>" required>
                </div>

                <div class="form-group col-md-6">
                    <label for="pwd">Telefone:</label>
                    <input type="text" class="form-control" id="telefone" name="telefone" placeholder="Ex.: (00) 00000-0000"value="<%=dados[0].telefone%>" required>
                </div>

                <div class="form-group col-md-12">
                    <label for="idTipo">Tipo usuario:</label>
                    <select class="custom-select" name="idTipo" id="idTipo">
                        <option value="1">GERENTE</option>
                        <option value="2">VENDEDOR</option>
                    </select>
                </div>

                <div class="form-group">
                    <button type="submit" class="btn btn-danger">Salvar</button>
                </div>
            </div>
        </form>
    </div>


</div>

<%- include("../includes/footer") -%>