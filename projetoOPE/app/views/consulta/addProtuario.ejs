<div id="content-wrapper">

<div class="container-fluid">

    <!-- DataTables Example -->
    <div class="card mb-3">
        <div class="card-header">
            <i class="fas fa-stethoscope"></i>
            Agendar consulta
        </div>
        <div class="card-body">

                <% if(validacao.length > 0){%>
                    <div class="alert alert-danger">
                        <strong>Atenção!</strong>
                        <ul>
                            <% for(var i = 0; i < validacao.length; i++){%>
            
                            <li><%= validacao[i].msg %></li>
            
                            <% } %>
                        </ul>
                    </div>
                <% } %>
            

            <form class="row-12" action="/consulta/agendar" method="post">
                <div class="form-group col">
                    <label for="idConsulta">Consulta:</label>
                    <select class="custom-select" name="idConsulta" id="idNutricionista">
                    <% for(var i = 0; i < dadosConsulta.length; i++) { %>
                        <option value="<%= dadosConsulta[i].idConsulta %>"><%= dadosConsulta[i].idConsulta %></option>
                    <% } %>
                    </select>
                </div>

                <div class="form-group col">
                    <label for="diagnostico">Diágnostico:</label>
                    <textarea class="form-control" id="diagnostico" name="diagnostico"></textarea>
                </div>

                <div class="form-group col">
                    <label for="idNutricionista">Nutricionista:</label>
                    <select class="custom-select" name="idNutricionista" id="idNutricionista">
                    <% for(var i = 0; i < dadosNutricionista.length; i++) { %>
                        <option value="<%= dadosNutricionista[i].idNutricionista %>"><%= dadosNutricionista[i].nome %></option>
                    <% } %>
                    </select>
                </div>

                <div class="form-group">
                    <button type="submit" class="btn btn-danger">Cadastrar</button>
                </div>
        
            </div>
        </form>
    </div>


</div>

<%- include("../includes/footer") -%>